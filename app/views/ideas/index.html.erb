<p id="notice"><%= notice %></p>

<h1>Listing ideas</h1>

<% @ideas.in_groups_of(3) do |group| %>
  <div class="row">
    <% group.compact.each do |idea| %>
      <div class="col-md-4">
        <%= image_tag idea.picture_url, width: 300, height: 300 if idea.picture.present?%>
        <h4><%= link_to idea.name, idea, class: "btn btn-info" %></h4>
        <%= idea.description %>
        <hr>
      </div>
    <% end %>
  </div>
<% end %>

<p><%= link_to 'New Idea', new_idea_path%></p>